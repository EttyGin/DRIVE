apiVersion: batch/v1
kind: CronJob
metadata:
  name: postgres-vacuum-job
  namespace: your-namespace
spec:
  # רץ כל יום בחצות
  schedule: "0 0 * * *"
  jobTemplate:
    spec:
      template:
        spec:
          restartPolicy: OnFailure
          containers:
            - name: vacuum
              image: docker.io/library/postgres:15
              command: ["/bin/bash", "-c"]
              args:
                - |
                  echo "Running VACUUM on $(date)"
                  psql "$DATABASE_URL" -c "VACUUM;"
              env:
                - name: DATABASE_URL
                  valueFrom:
                    secretKeyRef:
                      name: postgres-credentials
                      key: DATABASE_URL
